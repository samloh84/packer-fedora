{
  "_comment": "Base template. Run by executing packer -var-file=<variable_file> fedora-developer.json",
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "output/virtualbox-iso/{{ user `vm_name` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "output_directory": "output/{{ build_type }}/{{ user `vm_name` }}-developer",
      "shutdown_command": "{{ user `shutdown_command` }}"
    },
    {
      "type": "vmware-vmx",
      "source_path": "output/vmware-iso/{{ user `vm_name` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "output_directory": "output/{{ build_type }}/{{ user `vm_name` }}-developer",
      "shutdown_command": "{{ user `shutdown_command` }}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "ansible.yml",
      "galaxy_file": "requirements.yml"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "compression_level": "{{user `compression_level`}}",
      "output": "output/{{ user `vm_name` }}.{{ build_type }}.box"
    }
  ],
  "variables": {
    "compression_level": "9",
    "iso_path": "iso",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_timeout": "60m",
    "disk_size": "204800",
    "virtualbox_guest_os_type": "RedHat_64",
    "vmware_guest_os_type": "fedora-64",
    "memory": "2048",
    "cpus": "2",
    "shutdown_command": "sudo shutdown -h now",
    "kickstart": "anaconda-ks.cfg",
    "headless": "false"
  }

}
