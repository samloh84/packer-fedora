{
  "_comment": "Base template. Run by executing packer build -var-file=<variable_file> centos-developer.json",
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "iso_target_path": "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
      "iso_urls": [
        "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "boot_command": "<tab> ks=hd:fd0:/{{ user `kickstart` }} <enter><wait>",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "floppy/{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-{{ user `install_type` }}/{{ user `kickstart` }}"
      ],
      "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "output_directory": "output/{{ build_type }}/{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-developer-{{ user `install_type` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "vm_name": "{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-developer-{{ user `install_type` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "format": "ova"
    },
    {
      "type": "vmware-iso",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "iso_target_path": "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
      "iso_urls": [
        "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "boot_command": "<tab> text ks=hd:fd0:/{{ user `kickstart` }} <enter><wait>",
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id": "0",
      "floppy_files": [
        "floppy/{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-{{ user `install_type` }}/{{ user `kickstart` }}"
      ],
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "output_directory": "output/{{ build_type }}/{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-developer-{{ user `install_type` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "vm_name": "{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-developer-{{ user `install_type` }}",
      "vmdk_name": "{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-developer-{{ user `install_type` }}",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}",
        "mks.enable3d": "{{ user `graphics_enabled` }}"
      },
      "vmx_data_post": {
        "ethernet0.connectionType": "bridged"
      },
      "tools_upload_flavor": ""
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "ansible/requirements.yml",
      "destination": "/root/requirements.yml"
    },
    {
      "type": "file",
      "source": "ansible/ansible.yml",
      "destination": "/root/ansible.yml"
    },
    {
      "type": "shell",
      "inline": [
        "ansible-galaxy install -r /root/requirements.yml",
        "ansible-playbook /root/ansible.yml"
      ],
      "remote_folder": "/root"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "compression_level": "{{user `compression_level`}}",
      "output": "output/{{ user `linux_distribution` }}-{{ user `linux_distribution_version` }}-developer-{{ user `install_type` }}.{{ build_type }}.box"
    }
  ],
  "variables": {
    "compression_level": "9",
    "iso_path": "iso",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_timeout": "60m",
    "disk_size": "204800",
    "virtualbox_guest_os_type": "RedHat_64",
    "vmware_guest_os_type": "fedora-64",
    "memory": "2048",
    "cpus": "2",
    "shutdown_command": "sudo /sbin/shutdown -P now",
    "kickstart": "anaconda-ks.cfg",
    "headless": "false",
    "graphics_enabled": "FALSE"
  }
}
